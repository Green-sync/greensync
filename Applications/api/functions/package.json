{
  "name": "api",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only firestore,auth,storage,functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "dev": "concurrently \"pnpm watch\"  \" pnpm serve\" ",
    "watch": "tsc -w",
    "deploy:api": " firebase deploy --only functions:playground,hosting:dev",
    "deploy:api:prod": " firebase deploy --only functions:greensync,hosting:prod",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "16"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@apollo/server": "^4.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "firebase-admin": "^11.5.0",
    "firebase-functions": "^4.2.0",
    "graphql": "^16.6.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^18.16.3",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.25.4",
    "firebase-functions-test": "^3.0.0",
    "typescript": "^5.0.4"
  },
  "private": true
}
